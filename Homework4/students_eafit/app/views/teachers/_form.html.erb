<%= simple_form_for(@teacher) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :name %>
    <%= f.input :last_name %>
    <%= f.input :cumple %>
    <%= f.input :course_id, collection: Course.all %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
